{% import "../../shared/card/card.twig" as card %}
{% import "../../shared/category/category.twig" as category %}
{% import "../../shared/productBox/productBox.twig" as productBox %}
{% import "../../shared/cardCart/cardCart.twig" as cardCart %}
<section class="page-section--small" style="text-align: left;">
	<div class="container">
		<p class="direct">Home >
			<a href="#">My Cart</a>
		</p>
		<div class="row" style="justify-content: center;">
			<div class="col-lg-12">
        <div class="nvd-cart-header">
          <div class="nvd-cart-header__title">Shopping Cart</div>
          <div class="nvd-cart-header__description">
            These products are limited, checkout within:</div>
          <div class="nvd-cart-header__times">
            <div class="nvd-cart-header__time-number">1</div>
            <div class="nvd-cart-header__time">days</div>
            <div class="nvd-cart-header__time-number">17</div>
            <div class="nvd-cart-header__time">hrs</div>
            <div class="nvd-cart-header__time-number">30</div>
            <div class="nvd-cart-header__time">mins</div>
            <div class="nvd-cart-header__time-number">23</div>
            <div class="nvd-cart-header__time">secs</div>
          </div>
          <div class="nvd-cart-header__state">Buy $69.00 more to enjoy FREE Shipping</div>
          <input class="nvd-cart-header__range" type="range">
        </div>

			</div>

			<div class="col-lg-10">
				<table>
          <thead>
            <tr>
              <th style="width:400px;font-size: 15px;">Product</th>
              <th style="width:200px;font-size: 15px;">Price</th>
              <th style="width:280px;font-size: 15px;">Quantity</th>
              <th style="font-size: 15px;">Total</th>
            </tr>
          </thead>
					<tbody>
            {{cardCart.render()}}
            {{cardCart.render()}}
            {{cardCart.render()}}
            {{cardCart.render()}}
            {{cardCart.render()}}
          </tbody>

        </table>
				<div class="col-lg-12">
					<div class="page-number">
						<a class="page-number__item--select" href="#">1</a>
						<a class="page-number__item" href="#">2</a>
						<a class="page-number__item" href="#">3</a>
						<a class="page-number__item" href="#">4</a>
						<a class="page-number__item" href="#">
							<i class="fa-solid fa-arrow-right"></i>
						</a>
					</div>
				</div>
			</div>
		</div>
	</section>
